<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.UnlockActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/main_40"
    android:background="@drawable/bg_page">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/icon_logo"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/main_10"
        android:background="@drawable/bg_white_conner_shadow"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="63dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_pass_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_key"
                        android:textSize="18sp"
                        android:text="@string/pwd_upper"
                        android:layout_marginRight="10dp"
                        android:letterSpacing="0.1"
                        />
                    <ImageView
                        android:id="@+id/pass_info"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/icon_info_green"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <EditText
                        android:id="@+id/password_input"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:hint="@string/create_pass_input_hit"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:letterSpacing="0.05"
                        android:textColor="@color/color_description_blue"
                        android:textColorHint="@color/color_description_blue"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:textAlignment="center"/>
                    <ImageView
                        android:id="@+id/pass_switch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@mipmap/icon_eye_open"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="@dimen/main_60"
                >
                <LinearLayout
                    android:id="@+id/btn_unlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@mipmap/icon_chevron_up"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/unlock_uppre"
                        android:letterSpacing="0.1"
                        android:textSize="18sp"
                        android:textColor="@color/color_black"/>
                </LinearLayout>
            </RelativeLayout>
<!--
            <LinearLayout
                android:id="@+id/btv_forget_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_pass"
                    android:textColor="@color/color_0066ff"/>
            </LinearLayout>-->
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>